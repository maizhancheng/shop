<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|right">

    <LinearLayout
        android:id="@+id/rl_left"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_home_selector"

        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_home_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15_dp"
            android:text="@string/nav_sign_in"
            android:textSize="@dimen/text_size_14_sp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iv_home_right"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/margin_8_dp"
            android:layout_marginRight="@dimen/margin_8_dp"
            android:background="@drawable/anim_sign_coin"
            />

    </LinearLayout>

</LinearLayout>